<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:backgroundTint="#A19DA6"
        app:cardCornerRadius="4dp"
        android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/rr_maintext"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:padding="10dp"
               android:layout_weight="1"
               android:text="TextView" />

           <ImageView
               android:id="@+id/rr_iv"
               android:layout_width="0dp"
               android:layout_weight="0.1"
               android:layout_height="wrap_content"
               android:layout_marginRight="8dp"
               android:layout_gravity="center"
               android:layout_toRightOf="@id/rr_maintext"
               android:src="@drawable/ic_down"></ImageView>
       </LinearLayout>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/rr_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_bg"
        android:padding="5dp"
        android:paddingLeft="10dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/rr_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Hellow" />
        <TextView
            android:id="@+id/rr_tv2"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="World" />

    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>